<div class="form-wrapper">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email, 'Почта' %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
    <%= errors_for(resource, :email) %>

    <div class="form-group">
      <%= f.label :password, 'Пароль' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> символов минимум)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
    <%= errors_for(resource, :password) %>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Повторите Пароль' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
    <%= errors_for(resource, :password_confirmation) %>

    <div class="form-group">
      <%= f.submit "Регистрация", class: 'btn btn-reg' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
