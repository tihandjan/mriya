script src="https://cdnjs.cloudflare.com/ajax/libs/galleria/1.5.7/galleria.min.js"
#galleria
  .galleria
    - @album.photos.each do |photo|
      a href="#{photo.photo.url}" 
        img data-big="#{photo.photo.url}" data-description=("My description") data-title=("My title") src="#{photo.photo.url(:thumb)}" 
javascript:
  Galleria.loadTheme('https://cdnjs.cloudflare.com/ajax/libs/galleria/1.5.7/themes/classic/galleria.classic.min.js');
    Galleria.configure({
        imageCrop: false,
        transition: 'fade',
        lightbox: true,
        dummy: '/assets/photos/dummy.png' 
    });  
    Galleria.run('#galleria');