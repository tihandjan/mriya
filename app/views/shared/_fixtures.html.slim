.right-wrapper
    .table-header-wrapper
        i.sprite.sprite-L#back
        h4.table-header = t 'fixtures.championship'
        i.sprite.sprite-R#forward
    - set_leagues.each_with_index do |league, i|
        - if league.name.downcase == 'u-17' || league.name.downcase == 'u-15'
            .sub-header class="table-#{i}" #{t 'fixtures.first_league'} #{league.name}
            table.table class="table-#{i}"
                thead
                    tr
                        th
                            | #
                        th
                            = t 'fixtures.team'
                        th
                            |Ð¾
                tbody
                    - league.tables.order(points: :desc).each_with_index do |table, index|
                        tr
                            td
                                = index + 1
                            td
                                = table.team_name
                            td
                                = table.points
    = link_to (t 'buttons.detailed_table'), duflu_games_path, class: 'btn btn-outline-secondary table-btn'
.fixtures-header = t 'fixtures.games'
.prev-next-wrapper.clearfix
    .prev.btn.active = t 'buttons.past'
    .next.btn = t 'buttons.following'
table.table.table-fixtures#table-prev
    tbody.tbody
        - prev_fixtures.each do |fixture|
            tr
                td.date
                    = l(fixture.date, format: "%d %B")
                td.team-age
                    = fixture.category
                td
            tr
                td.team
                    = fixture.home_team
                td.score-td
                    .score = fixture.score
                td.team
                    = fixture.away_team
table.table.table-fixtures#table-next
    tbody.tbody
        - next_fixtures.each do |fixture|
            tr
                td.date
                    = l(fixture.date, format: "%d %B")
                td.team-age
                    = fixture.category
                td
            tr
                td.team
                    = fixture.home_team
                td.score-td
                    .score = fixture.date.strftime("%H-%M")
                td.team
                    = fixture.away_team
        
              